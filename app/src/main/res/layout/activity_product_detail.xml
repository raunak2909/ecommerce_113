<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ProductDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="100dp"
                    android:layout_margin="8dp"
                    android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/pd_img_back_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="11dp"
                    android:layout_marginLeft="4dp"
                    android:src="@drawable/baseline_arrow_back_ios_24"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>



            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:cardCornerRadius="100dp"
                android:layout_margin="8dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/pd_img_share_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="11dp"
                    android:src="@drawable/baseline_share_24"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:cardCornerRadius="100dp"
                android:layout_margin="8dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/pd_img_like_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="11dp"
                    android:src="@drawable/baseline_thumb_up_off_alt_24"/>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <ImageView
            android:id="@+id/pd_img_product_image"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:src="@drawable/headphones"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/pd_txt_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wireless HeadPhones"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_margin="9dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/pd_txt_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$600.00"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Color"
            android:layout_margin="8dp"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerProductType"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="100dp"
                android:layout_margin="11dp">
                <View
                    android:id="@+id/pd_view_product_color1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#3F51B5"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="100dp"
                android:layout_margin="11dp">
                <View
                    android:id="@+id/pd_view_product_color2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E91E63"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="100dp"
                android:layout_margin="11dp">
                <View
                    android:id="@+id/pd_view_product_color3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#4CAF50"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_margin="11dp"
                app:cardCornerRadius="60dp"
                app:cardBackgroundColor="@color/orange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:text="Description"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_margin="11dp"
                    android:textColor="@color/white"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_margin="11dp"
            app:cardCornerRadius="60dp"
            app:cardBackgroundColor="@color/orange"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:text="Specification"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_margin="11dp"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_margin="11dp"
                app:cardCornerRadius="60dp"
                app:cardBackgroundColor="@color/orange"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:text="Reviews"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_margin="11dp"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <TextView
            android:id="@+id/pd_txt_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="11dp"
            android:textSize="16dp"
            android:textColor="#8A8A8A"
            android:text="headphones"/>



    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        app:cardCornerRadius="60dp"
        app:cardBackgroundColor="@color/black"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:cardCornerRadius="60dp"
                android:layout_margin="11dp"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="60dp"
                    android:background="@color/black"
                    android:layout_margin="2dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/pd_img_minus_button"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/minus"/>

                        <TextView
                            android:id="@+id/pd_txt_quanity"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:text="1"/>


                        <ImageView
                            android:id="@+id/pd_img_add_button"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/add"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Cd_add_to_cart_button"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="60dp"
                app:cardBackgroundColor="@color/orange"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/pd_txt_add_to_cart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Add to Cart"
                    android:textColor="@color/white"
                    android:gravity="center"/>


            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>




























